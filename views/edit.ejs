<% include partials/_header.ejs %>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <form action="/edit/<%= task._id %>" method="POST">
                        <div class="form-group">
                            <input type="text" name="tittle" id="" class="form-control" value="<%= task.tittle %>">
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" placeholder="Descripcion" name="description"><%= task.description %></textarea>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Actualizar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

